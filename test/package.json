{
  "name": "duru-notes-rls-tests",
  "version": "1.0.0",
  "description": "RLS Policy Tests for DuruNotes",
  "scripts": {
    "test": "jest test_rls_policies.ts",
    "test:local": "SUPABASE_URL=http://localhost:54321 npm test",
    "test:staging": "npm test",
    "test:ci": "jest test_rls_policies.ts --ci --coverage"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/test_rls_policies.ts"
    ],
    "collectCoverageFrom": [
      "test_rls_policies.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}

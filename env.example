# Edge Functions Environment Variables Template
# Copy this file to .env.local, .env.staging, or .env.production

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_PROJECT_REF=your-project-ref

# Email Inbox Configuration
INBOUND_HMAC_SECRET=your-hmac-secret-min-32-chars
INBOUND_ALLOWED_IPS=  # Optional: comma-separated IP allowlist
INBOUND_PARSE_SECRET=  # Deprecated: only for backward compatibility

# Push Notification Configuration
FCM_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project",...}

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error

# Optional: Monitoring
SENTRY_DSN=  # If using Sentry for error tracking
SLACK_WEBHOOK_URL=  # For critical alerts

# -------------------------------------------------------------
# Base application environment template
# Copy this file to .env.local, .env.staging, or .env.production
# and populate with real secrets for each deployment.
# -------------------------------------------------------------

# --- Supabase -------------------------------------------------
SUPABASE_URL=https://<your-project>.supabase.co
SUPABASE_ANON_KEY=replace-with-anon-key
SUPABASE_SERVICE_ROLE_KEY=replace-with-service-role-key
SUPABASE_PROJECT_REF=<your-project-ref>

# Optional: REST / Edge endpoint overrides
API_EXTERNAL_URL=http://localhost:54321
SITE_URL=http://localhost:3000
ADDITIONAL_REDIRECT_URLS=

# --- Authentication / JWT ------------------------------------
JWT_SECRET=generate-32-byte-secret
JWT_EXPIRY=3600
DISABLE_SIGNUP=false
ENABLE_EMAIL_SIGNUP=true
ENABLE_EMAIL_AUTOCONFIRM=false
ENABLE_ANONYMOUS_USERS=false

# --- Email (Inbound / SMTP) ----------------------------------
INBOUND_HMAC_SECRET=replace-with-hmac-secret
INBOUND_ALLOWED_IPS=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SENDER_NAME="Duru Notes"

# --- Push Notifications --------------------------------------
FCM_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project",...}

# --- Monitoring & Analytics ----------------------------------
SENTRY_DSN=
ANALYTICS_ENABLED=true
CRASH_REPORTING_ENABLED=true
ANALYTICS_SAMPLING_RATE=0.1
SENTRY_TRACES_SAMPLE_RATE=0.15
SENTRY_SEND_DEFAULT_PII=false

# --- Runtime Flags -------------------------------------------
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=info
ENABLE_DEBUG_TOOLS=false
ENABLE_LOCAL_STORAGE_ENCRYPTION=true
BACKGROUND_SYNC_INTERVAL_MINUTES=5
SESSION_TIMEOUT_MINUTES=15

# --- Docker / Local Supabase ---------------------------------
POSTGRES_PASSWORD=postgres
ANON_KEY=replace-with-local-anon-key
SERVICE_ROLE_KEY=replace-with-local-service-role
API_TIMEOUT=10000
MAX_RETRY_ATTEMPTS=5
ENABLE_CACHING=true
CACHE_DURATION_MINUTES=60

# --- iOS / Android Build -------------------------------------
IOS_BUNDLE_IDENTIFIER=com.durunotes.app
ANDROID_APPLICATION_ID=com.durunotes.app

# --- Optional Integrations -----------------------------------
SLACK_WEBHOOK_URL=
FORCE_HTTPS=true
ENABLE_CERTIFICATE_PINNING=false
MINIMUM_PASSWORD_STRENGTH=strong

# Keep additional project-specific variables below this line.

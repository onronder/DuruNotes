# Example Environment Configuration
# Copy this file to dev.env, staging.env, or prod.env and fill in real values

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# Email-In Configuration
# Domain for inbound email addresses (e.g., alias@notes.yourdomain.com)
INBOUND_EMAIL_DOMAIN=notes.yourdomain.com

# Environment Settings
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=debug

# Monitoring & Analytics Configuration
# Sentry DSN for crash reporting (leave empty to disable)
SENTRY_DSN=
# Enable crash reporting (staging/prod only)
CRASH_REPORTING_ENABLED=false
# Enable analytics tracking
ANALYTICS_ENABLED=false
# Analytics sampling rate (0.0 to 1.0)
ANALYTICS_SAMPLING_RATE=1.0
# Sentry performance traces sampling rate (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.15
# Send personally identifiable information to Sentry (keep false for privacy)
SENTRY_SEND_DEFAULT_PII=false
# Enable automatic session tracking
SENTRY_AUTO_SESSION_TRACKING=true

# Legacy Feature Flags (for backward compatibility)
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false
ENABLE_PERFORMANCE_MONITORING=false

# API Settings
API_TIMEOUT=30000
MAX_RETRY_ATTEMPTS=3

# Storage Settings
ENABLE_LOCAL_STORAGE_ENCRYPTION=true
LOCAL_DB_NAME=duru_notes_example.db

# Security Settings
ENABLE_BIOMETRIC_AUTH=true
SESSION_TIMEOUT_MINUTES=60

# Development Specific
ENABLE_DEBUG_TOOLS=true
MOCK_EXTERNAL_SERVICES=false
BYPASS_RATE_LIMITING=true

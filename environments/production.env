# Production Environment Configuration
# Duru Notes Production Infrastructure Settings

# Environment
export ENVIRONMENT="production"
export AWS_REGION="us-east-1"

# Supabase Configuration
export SUPABASE_PROJECT_REF="your-production-project-ref"
export SUPABASE_URL="https://your-production-project-ref.supabase.co"
export SUPABASE_ANON_KEY="your-production-anon-key"
export SUPABASE_SERVICE_ROLE_KEY="your-production-service-role-key"
export SUPABASE_JWT_SECRET="your-production-jwt-secret"

# API Configuration
export API_BASE_URL="https://api.duru-notes.com"
export DOMAIN_NAME="duru-notes.com"

# Kong Configuration
export KONG_ADMIN_URL="https://kong-admin.duru-notes.com"
export KONG_ADMIN_TOKEN="your-production-kong-admin-token"

# Database Configuration
export KONG_DB_INSTANCE_CLASS="db.r5.large"
export KONG_DB_ALLOCATED_STORAGE="100"
export KONG_DB_MAX_ALLOCATED_STORAGE="500"

# Redis Configuration
export REDIS_NODE_TYPE="cache.r5.large"

# Kong Service Configuration
export KONG_CPU="2048"
export KONG_MEMORY="4096"
export KONG_DESIRED_COUNT="3"
export KONG_MIN_CAPACITY="2"
export KONG_MAX_CAPACITY="10"

# Auto-scaling Configuration
export ENABLE_AUTO_SCALING="true"
export AUTO_SCALING_TARGET_CPU="70"
export AUTO_SCALING_TARGET_MEMORY="80"

# Monitoring Configuration
export ENABLE_MONITORING="true"
export PROMETHEUS_URL="https://prometheus.duru-notes.com"
export GRAFANA_URL="https://monitoring.duru-notes.com"
export PROMETHEUS_RETENTION_DAYS="90"

# Security Configuration
export ENABLE_WAF="true"
export ENABLE_CLOUDTRAIL="true"
export ENABLE_CONFIG="true"
export ENABLE_GUARDDUTY="true"

# Backup Configuration
export BACKUP_RETENTION_DAYS="90"
export ENABLE_CROSS_REGION_BACKUP="true"
export BACKUP_REGION="us-west-2"

# FCM Configuration
export FCM_PROJECT_ID="your-firebase-project-id"
# export FCM_SERVICE_ACCOUNT_KEY - Set via AWS Secrets Manager

# Webhook Configuration
# export WEBHOOK_SECRET - Set via AWS Secrets Manager

# Notification Configuration
export SLACK_WEBHOOK_URL="https://hooks.slack.com/services/your/production/webhook"
export PAGERDUTY_INTEGRATION_KEY="your-production-pagerduty-key"

# Feature Flags
export ENABLE_RATE_LIMITING="true"
export ENABLE_CORS="true"
export ENABLE_JWT_AUTH="true"
export ENABLE_HMAC_AUTH="true"
export ENABLE_PROMETHEUS_METRICS="true"

# Logging Configuration
export LOG_LEVEL="info"
export ENABLE_DEBUG_MODE="false"

# Resource Tagging
export COST_CENTER="engineering"
export OWNER="platform-team"
export DATA_CLASSIFICATION="confidential"

# Domain and SSL
export ROUTE53_ZONE_NAME="duru-notes.com"

# VPC Configuration
export VPC_CIDR="10.0.0.0/16"

# Compliance
export ENABLE_COMPLIANCE_MONITORING="true"
export COMPLIANCE_FRAMEWORKS="SOC2,HIPAA"
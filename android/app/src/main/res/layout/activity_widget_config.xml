<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/config_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Default Capture Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_capture_type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <RadioGroup
            android:id="@+id/capture_type_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radio_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_text"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_voice" />

            <RadioButton
                android:id="@+id/radio_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_camera" />
        </RadioGroup>

        <!-- Features -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_features"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <CheckBox
            android:id="@+id/checkbox_show_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_show_recent"
            android:checked="true"
            android:layout_marginTop="8dp" />

        <CheckBox
            android:id="@+id/checkbox_enable_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_enable_voice"
            android:checked="true" />

        <CheckBox
            android:id="@+id/checkbox_enable_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_enable_camera"
            android:checked="true" />

        <!-- Default Template -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_template"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/template_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radio_no_template"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_config_no_template"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_meeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_template_meeting" />

            <RadioButton
                android:id="@+id/radio_idea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_template_idea" />

            <RadioButton
                android:id="@+id/radio_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_template_task" />
        </RadioGroup>

        <!-- Theme -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_theme"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <RadioGroup
            android:id="@+id/theme_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radio_theme_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_config_theme_auto"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radio_theme_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_config_theme_light" />

            <RadioButton
                android:id="@+id/radio_theme_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/widget_config_theme_dark" />
        </RadioGroup>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/widget_config_cancel"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/button_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/widget_config_save"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
